<%- include('../parts/html-head') %>

<div class="container d-flex align-items-center justify-content-center"><div class="Login-row ">
        <h3>會員模擬登入</h3>
        <form action="" onsubmit="sendForm(event)" name="form1" class="">
            <div class="mb-3 ">
                <div>
                    <label for="" class="form-label">Account(賬號)</label>
    
                    <input type="text"
                    class="form-control"
                    name="username"
                    value="">
                    <div class="form-text"></div>
                </div>
    
                <div class="mb-3">
                    <label for="" class="form-label">Password(密碼)</label>
    
                    <input type="password"
                    name="password"
                    class="form-control"
                    value="">
    
                    <div class="form-text"></div>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Mobile</label>
    
                    <input type="text"
                    name="Mobile"
                    class="form-control"
                    value="">
    
                    <div class="form-text"></div>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">address</label>
    
                    <input type="text"
                    name="address"
                    class="form-control"
                    value="">
    
                    <div class="form-text"></div>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Birthday</label>
    
                    <input type="date"
                    name="Birthday"
                    class="form-control"
                    value="">
    
                    <div class="form-text"></div>
                </div>
                <button type="submit" class="btn btn-primary">註冊帳號</button>
    
            </div>
        </form>
</div>
</div>

<%- include('../parts/script')%>
<script>
    function sendForm(event){
        event.preventDefault();

        const sendObj = {
            username : document.form1.username.value,
            password: document.form1.password.value,
            Mobile: document.form1.Mobile.value,
            address: document.form1.address.value,
            Birthday: document.form1.Birthday.value,

        }

        fetch('',{
            method: 'POST',
            body: JSON.stringify(sendObj),
            headers: {
                'Content-Type': 'application/json'
            },
        })
        .then(r=>r.json())
        .then(obj=>{
            console.log(obj);
            if(obj.success){
                alert(obj.success);
                location.href = '/../member/main';
            }else {
                alert(obj.error);
            }
        });
    }
</script>
